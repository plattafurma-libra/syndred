{
  "name": "syndred",
  "version": "0.0.1",
  "main": "jsx/syndred.js",
  "scripts": {
    "build": "mkdir -p target/javascript && babel src/jsx -d target/javascript",
    "bundle": "browserify target/javascript/syndred.js -o res/public/script.js",
    "minify": "uglifyjs -c -o res/public/script.js -- res/public/script.js",
    "start": "watch 'npm run build && npm run bundle' src/jsx",
    "watch": "npm run build && npm run bundle && npm run minify"
  },
  "dependencies": {
    "@stomp/stompjs": "^4.0.0",
    "cuid": "^2.0.2",
    "draft-js": "^0.10.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-textarea-autosize": "^5.2.1",
    "sockjs-client": "^1.1.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "browserify": "^14.5.0",
    "uglify-es": "^3.1.10",
    "watch": "^1.0.2"
  },
  "babel": {
    "presets": [
      "react",
      "env"
    ],
    "plugins": [
      "babel-plugin-transform-react-jsx-source"
    ]
  }
}
